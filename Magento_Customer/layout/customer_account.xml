<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="Customer My Account (All Pages)" design_abstraction="custom">
  <body>
    <attribute name="class" value="account"/>
    <referenceContainer name="sidebar.main">
      <container name="sidebar.logout.link" htmlTag="div" htmlClass="logout" after="-">
        <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-logout-link">
          <arguments>
            <argument name="path" xsi:type="string">customer/account/logout</argument>
            <argument name="label" xsi:type="string">Sign out</argument>
          </arguments>
        </block>
      </container>
    </referenceContainer>
  </body>
</page>
